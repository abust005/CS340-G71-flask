<html>
<!-- Adapted from the Certifications.html UI design -->
<head>
	<title>Certifications</title>
	<link href="style.css" rel="stylesheet" type="text/css" />
	<script language="JavaScript">
	function showform(dowhat) {
		/*
		 * four DIVS: browse, insert, update, delete
		 * this function sets one visible the others not
		 */
		if(dowhat == 'insert') {
			document.getElementById('browse').style.display = 'none';
			document.getElementById('insert').style.display = 'block';
			document.getElementById('edit').style.display = 'none';
			document.getElementById('delete').style.display = 'none';
		} else if(dowhat == 'update') {
			document.getElementById('browse').style.display = 'none';
			document.getElementById('insert').style.display = 'none';
			document.getElementById('edit').style.display = 'block';
			document.getElementById('delete').style.display = 'none';
		} else if(dowhat == 'delete') {
			document.getElementById('browse').style.display = 'none';
			document.getElementById('insert').style.display = 'none';
			document.getElementById('edit').style.display = 'none';
			document.getElementById('delete').style.display = 'block';
		} else if(dowhat == 'all') {
			document.getElementById('browse').style.display = 'block';
			document.getElementById('insert').style.display = 'block';
			document.getElementById('edit').style.display = 'block';
			document.getElementById('delete').style.display = 'block';
		} else { //by default display browse
			document.getElementById('browse').style.display = 'block';
			document.getElementById('insert').style.display = 'none';
			document.getElementById('edit').style.display = 'none';
			document.getElementById('delete').style.display = 'none';
		}
	}

	function newCertification() {
		showform('insert');
	}

	function updateCertification(pid) {
		showform('update');
	}

	function deleteCertification(pid) {
		showform('delete');
	}

	function browseCertifications() {
		showform('browse');
	}

	function showAll() {
		showform('all');
	}
	</script>
</head>

<body onload="browseCertifications()">
	
	<h1>B&B Ski School</h1>
	<h2>Certifications Page</h2>
	<!--Links to other pages-->
	<header>
		<p><button><a href="http://flip1.engr.oregonstate.edu:8021/">Back to Home Page</a></button></p>
		<nav>
		<button><a href="http://flip1.engr.oregonstate.edu:8021/certifications">Certifications</a></button>
		<button><a href="http://flip1.engr.oregonstate.edu:8021/customers">Customers</a></button>
		<button><a href="http://flip1.engr.oregonstate.edu:8021/instructors">Instructors</a></button>
		<button><a href="http://flip1.engr.oregonstate.edu:8021/lessons">Lessons</a></button>
	</nav>

	<div id="browse">
		<p><a href="#" onClick="newCertification()">Add New</a> </p>
		<table border="1" cellpadding="5">
            <!-- Access data tuple passed from app.py --> 
            {% if data %}
			    <thead>
				    <tr>
					    <!-- Iterate through each key in the first entry to get the column name -->
                        {% for key in data[0].keys() %}
					    
                        <!-- Create a <th> tag with the key inside of it, this will be our header row -->
					    <th scope="col" data-field="{{ key }}" data-filter-control="input">{{ key }}</th>
					
                        <!-- End of this for loop -->
                        {% endfor %} 
                    </tr>

				<tbody>
					<!-- Now, iterate through every item in data -->{% for item in data %}
					    <tr>
						    <!-- Then iterate through every key in the current item dictionary -->
                            {% for key in item.keys() %}

						    <!-- Create a <td> element with the value of that key in it -->
						    <td> {{item[key]}} </td> 
                            {% endfor %}

                            <!-- Create our edit/delete buttons -->
						    <td><a href="edit_certifications/{{item.certID}}" class="btn btn-default">Edit</a></td>
						    <td><a href="delete_certifications/{{item.certID}}" class="btn btn-default">Delete</a></td>

					    </tr> 
                        {% endfor %} 
                {% endif %} 
        </table>   
	<p>&nbsp;</p>
	</div>	<!-- browse -->

	<div id="insert">
		<!-- form to INSERT new data into certifications-->
		<form id="insertCertification" action="/certifications" method="post">
			<legend><strong>Add Certification</strong></legend>
			<fieldset>
                <!-- placeholder shows ghost text, required forces an input, pattern forces input adherence -->
				<label for="make">first name:</label>
				<input type="text" class="form-control" id="fname" name="fname" pattern="[A-Za-z]{1,}" placeholder="" required>

				<label for="model">last name:</label>
				<input type="text" class="form-control" id="lname" name="lname" pattern="[A-Za-z0-9]{1,}" placeholder="" required>

				<label for="year">homeworld:</label>
				<select class="form-control" id="homeworld" name="homeworld" pattern="[0-4]{1}" placeholder="" required>
				<!-- these are hard coded, but you can add code to make this dynamic -->
					<option value="0">&nbsp;</option>
					<option value="1">Gemenon</option>
					<option value="2">Leonis</option>
					<option value="3">Caprica</option>
				</select>

				<label for="color">age:</label>
				<input type="text" class="form-control" id="age" name="age" pattern="[A-Za-z0-9]{1,}" placeholder=""> 
            </fieldset>

            <!-- Create 'Add Certification' and 'Cancel' buttons -->
			<input type="submit" value="Add Certification" name="Add_Certification" class="btn btn-primary" style="margin:.5rem;">
			<input class="btn" type="button" value="Cancel" onClick="browseCertifications()"> 
        </form>
	</div><!--insert-->
	<div id="edit">
		<!-- form to edit data in certifications-->
		<form id="editCertification" action="/edit_certifications/{{data[0].id}}" method="post">
			<legend><strong>Edit Certification</strong></legend>
			<fieldset>
				<input type="hidden" value="{{data[0].id}}" class="form-control" id="certID" name="certID" required>
				<label for="make">first name:</label>

				<input type="text" class="form-control" id="certName" name="certName" pattern="[A-Za-z]{1,}" placeholder="{{data[0].certName}}" required>
				<label for="model">last name:</label>

				<input class="btn" type="button" value="Cancel" onClick="browseCertifications()" style="margin:.5rem;"> 
        </form>
	</div><!--edit-->
</body>
</html>